<Window x:Class="DAHO.AspitSysGuests.GUI.CreateQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAHO.AspitSysGuests.GUI"
        mc:Ignorable="d"
        Title="CreateQuestion" Height="237.698" Width="630.361">
    <Grid>
        <TextBox x:Name="TboxQuestion" HorizontalAlignment="Left" Height="66" Margin="25,44,0,0" TextWrapping="Wrap" Text="Question" VerticalAlignment="Top" Width="315"/>
        <CheckBox x:Name="ChkBoxIsMulti" Content="Is multiple choice" HorizontalAlignment="Left" Margin="359,44,0,0" VerticalAlignment="Top"/>
